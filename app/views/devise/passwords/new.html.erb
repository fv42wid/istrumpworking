<div class="row">
  <div class="col-md-6">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
      <%#= devise_error_messages! %>
      <%= render 'layouts/errors', object: f.object %>

      <div class="form-group">
	<%= f.label :email, class: 'col-md-2 control-label' %>
	<div class="col-md-10">
	  <%= f.email_field :email, autofocus: true %>
	</div>
      </div>

      <div class="form-group">
	<div class="col-md-10 col-md-offset-2">
	  <%= f.submit "Send me reset password instructions", class: 'btn btn-default' %>
	</div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
