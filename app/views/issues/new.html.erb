<div class="row">
  <div class="col-md-8">
    <h1>New Issue</h1>
    <%= form_for(@issue, :html => {:class => 'form-horizontal'}) do |f| %>
      <%= render 'layouts/errors', object: f.object %>
      <div class="form-group">
	<%= f.label :name, class: 'col-md-2 label-control' %>
	<div class="col-md-10">
	  <%= f.text_field :name, class: 'form-control' %>
	</div>
      </div>
      <div class="form-group">
	<%= f.label :description, class: 'col-md-2 label-control' %>
	<div class="col-md-10">
	  <textarea name="issue[description]" class="form-control" rows="3"></textarea>
	</div>
      </div>
      <div class="form-group">
	<div class="col-md-10 col-md-offset-2">
	  <%= f.submit 'Create', class: 'btn btn-default' %>
	</div>
      </div>
    <% end %>
  </div>
</div>
