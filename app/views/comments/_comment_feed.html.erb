<%= item.comments.each do |comment| %>
  <div class="panel panel-default" id="comment-<%= comment.id %>">
    <div class="panel-heading">
      <h3 class="panel-title">
	<%= comment.user.username %>
      </h3>
    </div>
    <div class="panel-body">
      <%= comment.body %>
    </div>
  </div>
<% end %>
